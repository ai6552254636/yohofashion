                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                >

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:background="@color/colorBlack"
                    android:layout_marginTop="45dp"
